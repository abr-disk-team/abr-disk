<!-- ヘッダー -->
<% if user_signed_in? && current_user.admin %>
    <%= render 'template/admin_header' %>
<% elsif user_signed_in? %>
    <%= render 'template/user_header' %>
<% else %>
    <%= render 'template/visiter_header' %>
<% end %>
<!-- カート内確認画面 -->
<div class="container">
    <h1><%= current_user.last_name %><%= current_user.first_name %>さんの購入履歴</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>

            </tr>
        </thead>
        <tbody>
            <% current_user.orders.each do |order| %>
                <tr>
                    <td><%= attachment_image_tag order.order_item.item, :jacket_image, format: 'jpeg', fallback: "no_image.jpg", size:'50x50'%></td>
                    <td><%= order.order_item.item.genre.genre %></td>
                    <td><%= order.order_item.item.artist.artist %></td>
                    <td><%= order.order_item.item.label.label %></td>
                    <td><%= order.order_item.item.item.price %></td>
                    <td><%= order.order_item.item.quantity %></td>
                    <td><%= order.order_item.item.item.price * cart_item.quantity %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <h1>カート合計金額：</h1>
    <%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-default button-left" %>
</div>
<!-- フッター -->
<%= render 'template/footer' %>