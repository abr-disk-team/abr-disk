<!-- ヘッダー -->
<% if user_signed_in? && current_user.admin %>
    <%= render 'template/admin_header' %>
<% elsif user_signed_in? %>
    <%= render 'template/user_header' %>
<% else %>
    <%= render 'template/visiter_header' %>
<% end %>

<!-- 購入履歴一覧画面 -->
<div class="container">
    <h1><%= current_user.last_name %><%= current_user.first_name %>さんの購入履歴</h1>
    <table class="table">
        <thead>
            <tr>
                <th>購入日</th>
                <th>送付先名</th>
                <th>送付先住所</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% current_user.orders.each do |order| %>
                <tr>
                    <td><%= order.created_at %></td>
                    <td><%= order.another_address.address_name %></td>
                    <td><%= order.another_address.another_postcode %><%= order.another_address.another_prefecture %><%= order.another_address.another_city %><%= order.another_address.another_block %><%= order.another_address.another_building %></td>
                    <td><%= link_to "詳細を確認する", user_order_path(current_user.id, order.id), class:  "btn  btn btn-success" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to "マイページに戻る", user_path(current_user.id), class: "btn btn-default button-left" %>
</div>
<!-- フッター -->
<%= render 'template/footer' %>