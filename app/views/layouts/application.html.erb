<!DOCTYPE html>
<html>
  <head>
    <title>Abr Disk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<!-- ログアウトボタン(仮) -->

    <% if user_signed_in? %>
     <%= link_to " logout", destroy_user_session_path, method: :delete %>
     <% end %>

<!-- フラッシュメッセージの表示 -->
    <div class="container">
      <div class="row">
        <% if flash[:notice] %>
          <div id="notice">
            <%= flash[:notice] %>
          </div>
        <% end %>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
