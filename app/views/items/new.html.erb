<% end %>

NEW ITEMS

<%= simple_form_for(@item) do |f| %>
    cd_name
    <%= f.input :cd_name %>
    price
    <%= f.input :price %>
    stock
    <%= f.input :stock %>
    genre
    <%= f.collection_select  :genre_id,  Genre.all, :id, :genre %>
    artist
    <%= f.collection_select  :artist_id,  Artist.all, :id, :artist %>
    label
    <%= f.collection_select  :label_id,  Label.all, :id, :label %>
    jacket
    <%= f.attachment_field :jacket_image %>

