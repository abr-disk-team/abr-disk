<div class="nested-fields panel panel-default">
    <div class="panel-heading">
      ディスク
      <%= f.number_field :number %>
      <%= link_to_remove_association "削除", f %>
      </div>
    <div class="panel-body">
    <div class="songs" >
        <%= f.fields_for :songs do |song| %>
          <%= render 'song_fields', f: song %>
        <% end %>
        <%= link_to_add_association '曲を追加する', f, :songs %>
      </div>
    </div>
</div>

