<!-- ヘッダー -->
<% if user_signed_in? && current_user.admin %>
    <%= render 'template/admin_header' %>
<% elsif user_signed_in? %>
    <%= render 'template/user_header' %>
<% else %>
    <%= render 'template/visiter_header' %>
<% end %>
<!-- 注文確認画面 -->
<div class="container">
    <h1><%= current_user.last_name %><%= current_user.first_name %>さんのCART</h1>
    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>ジャンル</th>
                <th>アーティスト</th>
                <th>レーベル</th>
                <th>単価</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% current_user.cart_items.each do |cart_item| %>
                <tr>
                    <td><%= attachment_image_tag cart_item.item, :jacket_image, format: 'jpeg', fallback: "no_image.jpg", size:'50x50'%></td>
                    <td><%= cart_item.item.genre.genre %></td>
                    <td><%= cart_item.item.artist.artist %></td>
                    <td><%= cart_item.item.label.label %></td>
                    <td><%= cart_item.item.price %></td>
                    <td><%= cart_item.quantity %></td>
                    <td><%= cart_item.item.price * cart_item.quantity %></td>
                    <td><%= link_to "カートから削除", "/items/#{cart_item.item.id}/cart_items/#{cart_item.id}", method: :delete, class: "btn btn-danger" %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <h1>カート合計金額：</h1>
    <%= link_to "商品一覧に戻る", items_path, class: "btn btn-default button-left" %>
    <%= link_to "購入画面へ進む", "#", class: "btn btn-default button-right" %>

送り先を選ぶ
<%= form_for @cart, url:"/check_cart/#{@cart.id}" do |f| %>
	<br>
	<label><%= f.radio_button :shopping_address, "実家" %>実家</label>
	<label><%= f.radio_button :shopping_address, "別住所" %>登録した住所</label>
	<label><%= f.radio_button :shopping_address, "新住所" %>新しい住所に送る</label>
	<br>
	支払い方法を選ぶ
	<br>
	<label><%= f.radio_button :payment, "代金引換"%>代金引換</label>
	<label><%= f.radio_button :payment, "クレジットカード"%>クレジットカード</label>
	<label><%= f.radio_button :payment, "銀行振込"%>銀行振込</label>
	<br>
	この内容で購入する（確認画面へ）
	<%= f.submit %>
<% end %>
</div>
<%= link_to "確認画面へ",  "/carts/#{@cart.id}" %>

<!-- フッター -->
<%= render 'template/footer' %>