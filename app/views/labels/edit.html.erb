<!-- ヘッダー -->
<% if user_signed_in? && current_user.admin %>
    <%= render 'template/admin_header' %>
<% elsif user_signed_in? %>
    <%= render 'template/user_header' %>
<% else %>
    <%= render 'template/visiter_header' %>
<% end %>

EDIT LABEL


<%= form_for(@label) do |f| %>
    <%= f.text_field :label %>
    <%= f.submit %>
    <%= link_to "Destroy",@label, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_label_#{@label.id}" %>

<% end %>

<!-- フッター -->
<%= render 'template/footer' %>