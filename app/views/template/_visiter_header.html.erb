<!-- ビジターのヘッダーテンプレート -->
<nav class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "ABARANTI DISK", items_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to " 商品一覧", items_path, class: "glyphicon glyphicon-record" %></li>
        <li><%= link_to " カートを見る", "#", class: "glyphicon glyphicon-shopping-cart" %></li>
      </ul>
      <!-- 検索機能 -->
      <div class="navbar-form navbar-left">
        <%= search_form_for @q do |f|  %>
            <%= f.text_field :cd_name_cont, placeholder: "検索キーワード", class: "form-control"%>
          <%= f.submit "検索", class: "btn btn-default"%>
        <% end %>
      </div>

      <ul class="nav navbar-nav navbar-right">
          <li class="slidemenu-link">
            <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %>
          </li>
          <li class="slidemenu-link">
            <%= link_to " login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %>
          </li>
      </ul>
    </div>
  </div>
</nav>
<!-- ヘッダーの高さ調整用div -->
<div class="header-space"></div>
<!-- フラッシュメッセージの表示 -->
<div class="container">
  <div class="row">
    <% if flash[:notice] %>
      <div class="notice alert alert-success">
        <%= flash[:notice] %>
      </div>
    <% end %>
  </div>
</div>