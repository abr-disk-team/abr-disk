<!-- ヘッダー -->
<%= render 'users/header' %>

<div class="container">
	<div class="row">
		<div class="col-xs-6">
			<h1>ユーザー情報の編集</h1>

			<%= form_for(@user) do |f| %>
			<label>名前</label>
			<div class="field">
	         	<%= f.text_field :last_name, autofocus: true, class: "name-input" %>

	         	<%= f.text_field :first_name, autofocus: true, class: "name-input" %>

	         	<%= f.text_field :last_name_kana, autofocus: true, class: "name-input" %>

	         	<%= f.text_field :first_name_kana, autofocus: true, class: "name-input" %>
			</div>
			<label>電話番号</label>
			<div class="field">

	         	<%= f.text_field :phone_number, autofocus: true, class: "max-width-input" %>
			</div>
			<label>郵便番号</label>
			<div class="field">
	         	<%= f.text_field :postcode, autofocus: true, class: "max-width-input"  %>
			</div>
			<label>住所</label>
			<div class="field">
	         	<%= f.text_field :prefecture, autofocus: true, placeholder: '都道府県', class: "max-width-input" %>

	         	<%= f.text_field :city, autofocus: true, placeholder: '市区町村',class: "max-width-input" %>

	         	<%= f.text_field :block, autofocus: true, placeholder: '番地', class: "max-width-input"  %>

	         	<%= f.text_field :building, autofocus: true, placeholder: '建物', class: "max-width-input" %>
			</div>

			<%= f.submit "Update User", class: "button-right btn btn-default" %>
			<%= link_to "マイページに戻る", user_path(@user.id), class: "button-left btn btn-default" %>
		    <% end %>

		</div>
	</div>
</div>